<div class="container">
    <div class="jumbotron">
        <img src="https://media-cdn.tripadvisor.com/media/photo-s/17/ba/a6/31/burger.jpg">
        <h1>Eat Da Burger </h1>
    </div>

    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="col-md-4">
                    <h4>Burgers ready to eat!</h4>
                    <ul>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <li>
                            {{this.id}} {{this.burger_name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="1">
                                <button class="btn btn-primary" type="submit">DEVOUR IT!</button>
                            </form>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="col-md-4">
                    <form class="create-update-form" action="/" method="POST">

                        <div class="form-group">
                            <label for="burger">Burger to order:</label>
                            <input type="text" id="burger" name="burger_name">
                        </div>

                        <button class="btn btn-primary" type="submit">Submit</button>
                    </form>
                </div>

                <div class="col-md-4">
                    <h4>Burgers devoured</h4>
                    <ul>
                        {{#each burgers}}
                        {{#if this.devoured}}
                        <li>
                            {{this.id}} {{this.burger_name}}
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>